<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        tools:layout_editor_absoluteX="-41dp"
        tools:layout_editor_absoluteY="4dp">

        <LinearLayout
            android:id="@+id/flights_flights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/flights_departure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Departure" />

            <TextView
                android:id="@+id/flights_arrival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arrival" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/flights_flightnum"
                android:text="Flight Number"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="moreInformation"

                />
        </LinearLayout>

        <TextView
            android:id="@+id/book"
            android:layout_width="302dp"
            android:layout_height="57dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@+id/flights_flights"
            android:onClick="web"
            android:text="Go to the website and book a ticket " />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>